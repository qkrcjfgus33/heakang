<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
    <title xml:lang="ko">해강건설 레이아웃</title>
    <description xml:lang="ko">해강건설 레이아웃 입니다.</description>
    <version>0.0.1</version>
    <date>2015-03-23</date>
    <author email_address="qkrcjfgus3@gmail.com" link="http://vomvoru.dothome.co.kr/">
        <name xml:lang="ko">vomvoru</name>
    </author>
    <menus>
        <menu name="main_menu" maxdepth="2" default="true">
            <title xml:lang="ko">메인 메뉴</title>
        </menu>
        <menu name="head_menu" maxdepth="1" default="true">
            <title xml:lang="ko">머리말 메뉴</title>
        </menu>
        <menu name="footer_menu" maxdepth="1" default="true">
            <title xml:lang="ko">꼬리말 메뉴</title>
        </menu>
    </menus>

    <extra_vars>
        <group>
            <title xml:lang="ko">로고 설정</title>
            <var name="logo_image" type="image">
                <title xml:lang="ko">로고 이미지</title>
                <description xml:lang="ko">페이지 상단에 출력할 로고이미지를 입력하세요.</description>
            </var>
            <var name="logo_title" type="textarea">
                <title xml:lang="ko">사이트 제목</title>
                <description xml:lang="ko">페이지 상단에 출력할 사이트 제목을 입력하세요.</description>
            </var>
            <var name="footer_text1" type="textarea">
                <title xml:lang="ko">사이트 하단 첫번째 내용</title>
                <description xml:lang="ko">페이지 하단에 출력할 내용을 입력하세요.</description>
            </var>
            <var name="footer_text2" type="textarea">
                <title xml:lang="ko">사이트 하단 두번째 내용</title>
                <description xml:lang="ko">페이지 하단에 출력할 내용을 입력하세요.</description>
            </var>
        </group>
        <group>
            <title xml:lang="ko">고급(건들지 마시오)</title>
            <var name="type" type="select">
                <title xml:lang="ko">레이아웃 타입</title>
                <description xml:lang="ko">설정에 따라 레이아웃의 모양이 조금 달라집니다.</description>
                <options value="content">
                    <title xml:lang="ko">컨텐츠용</title>
                </options>
                <options value="main">
                    <title xml:lang="ko">메인용</title>
                </options>
            </var>
            <var name="slider_board_srl" type="text">
                <title xml:lang="ko">슬라이더 게시판 srl</title>
                <description xml:lang="ko">슬라이더 데이터 게시판 srl</description>
            </var>
        </group>
    </extra_vars>
</layout>
